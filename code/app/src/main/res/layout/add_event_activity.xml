<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddEventActivity">

    <View
        android:id="@+id/rectangle_bottom2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_description" />

    <TextView
        android:id="@+id/textView_latest_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:text="Add Event"
        android:padding="10dp"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Example Name: Swim Lesson"
        app:layout_constraintBottom_toTopOf="@+id/add_event_times"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_latest_event" />

    <EditText
        android:id="@+id/add_event_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Example Time: 5pm"
        app:layout_constraintBottom_toTopOf="@+id/add_event_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_name" />

    <Spinner
        android:id="@+id/weekday_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_times"
        app:layout_constraintEnd_toStartOf="@+id/add_event_times"
        app:layout_constraintStart_toEndOf="@+id/textView_times"
        app:layout_constraintTop_toTopOf="@+id/add_event_times" />

    <EditText
        android:id="@+id/add_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Example Location: DICE 8th floor"
        app:layout_constraintBottom_toTopOf="@+id/add_event_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_times" />

    <EditText
        android:id="@+id/add_event_description"
        android:layout_width="428dp"
        android:layout_height="276dp"
        android:backgroundTint="#D9D9D9"
        android:hint="Example description: Learn how to swim"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="436dp" />

    <TextView
        android:id="@+id/textView_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_event_name" />

    <TextView
        android:id="@+id/textView_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Time"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_times"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_event_times" />

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Location"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_event_location" />

    <TextView
        android:id="@+id/textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Price"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_event_price" />

    <Button
        android:id="@+id/button_save_event_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_back_add_event"
        app:layout_constraintTop_toBottomOf="@+id/add_event_description" />

    <Button
        android:id="@+id/button_back_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_save_event_add_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_description" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Registration Period"
        app:layout_constraintBottom_toBottomOf="@+id/add_event_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_event_period" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="429dp">

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/add_event_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Example period: 2 days"
        app:layout_constraintBottom_toTopOf="@+id/add_event_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_price" />

    <EditText
        android:id="@+id/add_event_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Example price: 30"
        app:layout_constraintBottom_toTopOf="@+id/add_event_period"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_event_location" />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>
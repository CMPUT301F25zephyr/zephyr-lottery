<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EntEventDetailActivity">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textView_ed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Registration closes -->
            <TextView
                android:id="@+id/textView_closingdate_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Closes"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView_closingdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date / time"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Starts / Ends -->
            <TextView
                android:id="@+id/textView_startend_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starts/Ends"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_startenddates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start - End"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Times -->
            <TextView
                android:id="@+id/textView_times_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Times"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_day_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day / time"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/textView_location_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_location_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location name"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/textView_price_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_price_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/textView_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView_description_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description goes here."
                android:textSize="16sp"
                android:layout_marginTop="2dp" />

            <!-- Current entrants -->
            <TextView
                android:id="@+id/textView_currententrants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Entrants: 0/? slots"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <!-- Lottery winners -->
            <TextView
                android:id="@+id/textView_lotterywinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lottery Winners: 0"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <!--            Event image-->
            <TextView
                android:id="@+id/textView_eventImage_ent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Image:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <ImageView
                android:id="@+id/imageView_ent_eventImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                app:srcCompat="@android:drawable/ic_menu_gallery" />


            <!-- Buttons row -->
            <LinearLayout
                android:id="@+id/button_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/button_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Join Waiting List" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/button_leave_waitlist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Leave Waiting List" />
            </LinearLayout>

            <!-- Back button -->
            <Button
                android:id="@+id/button_event_details_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrgEditEventActivity">

    <TextView
        android:id="@+id/textView_edit_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:text="Edit Event Image"
        android:padding="10dp"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/edit_event_image_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d9d9d9"
        android:src="@android:drawable/ic_menu_upload"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_image_upload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_edit_event" />

    <Button
        android:id="@+id/button_edit_event_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_edit_image_upload" />

    <Button
        android:id="@+id/button_edit_image_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select New Image"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_event_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_event_image_poster" />

</androidx.constraintlayout.widget.ConstraintLayout>
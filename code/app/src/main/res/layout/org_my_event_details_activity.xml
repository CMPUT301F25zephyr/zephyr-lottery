<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.OrgMyEventDetailsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_notify_waiting">

        <LinearLayout
            android:id="@+id/org_myeventdetails_linlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/text_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:padding="20dp"
                android:scrollbars="vertical"
                android:text="Loading event details..."
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_orgEventDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_gallery" />
        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/button_notify_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify Waiting List"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_draw_lottery" />

    <Button
        android:id="@+id/button_draw_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Lottery"
        app:layout_constraintTop_toBottomOf="@id/button_notify_waiting"
        app:layout_constraintBottom_toTopOf="@+id/button_org_event_details_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_entrants" />

    <Button
        android:id="@+id/button_notify_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify Selected Entrants"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView"
        app:layout_constraintBottom_toTopOf="@+id/button_draw_lottery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_entrants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Entrants"
        app:layout_constraintTop_toBottomOf="@id/button_notify_waiting"
        app:layout_constraintBottom_toTopOf="@+id/button_generate_qr"
        app:layout_constraintStart_toEndOf="@id/button_draw_lottery"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_generate_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate QR"
        app:layout_constraintTop_toBottomOf="@+id/button_entrants"
        app:layout_constraintBottom_toTopOf="@+id/button_org_event_details_back"
        app:layout_constraintStart_toEndOf="@id/button_org_event_details_edit"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_org_event_details_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Event"
        app:layout_constraintTop_toBottomOf="@id/button_draw_lottery"
        app:layout_constraintBottom_toTopOf="@+id/button_org_event_details_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_generate_qr" />

    <Button
        android:id="@+id/button_org_event_details_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@id/button_org_event_details_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_view_entrants_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Entrants on Map"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activities.OrgMyEventDetailsActivity">

    <TextView
        android:id="@+id/text_org_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Registration period -->
    <TextView
        android:id="@+id/text_org_registration_period_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Registration Period"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_event_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_registration_period_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Not set"
        app:layout_constraintTop_toBottomOf="@id/text_org_registration_period_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Times -->
    <TextView
        android:id="@+id/text_org_times_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Times"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_registration_period_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_times_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Monday 1pm"
        app:layout_constraintTop_toBottomOf="@id/text_org_times_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Location -->
    <TextView
        android:id="@+id/text_org_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Location"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_times_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_location_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Location"
        app:layout_constraintTop_toBottomOf="@id/text_org_location_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Price -->
    <TextView
        android:id="@+id/text_org_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Price"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_location_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_price_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$0.00"
        app:layout_constraintTop_toBottomOf="@id/text_org_price_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/text_org_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Description"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_price_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_description_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Description goes here"
        app:layout_constraintTop_toBottomOf="@id/text_org_description_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Current entrants -->
    <TextView
        android:id="@+id/text_org_current_entrants_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Current Entrants"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_description_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_current_entrants_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0/0 slots"
        app:layout_constraintTop_toBottomOf="@id/text_org_current_entrants_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lottery winners -->
    <TextView
        android:id="@+id/text_org_lottery_winners_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lottery Winners"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_org_current_entrants_value"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_org_lottery_winners_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/text_org_lottery_winners_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons row 1 -->
    <Button
        android:id="@+id/button_draw_lottery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Draw Lottery"
        app:layout_constraintTop_toBottomOf="@id/text_org_lottery_winners_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_entrants" />

    <Button
        android:id="@+id/button_entrants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="View Entrants"
        app:layout_constraintTop_toBottomOf="@id/text_org_lottery_winners_value"
        app:layout_constraintStart_toEndOf="@id/button_draw_lottery"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons row 2 -->
    <Button
        android:id="@+id/button_generate_qr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Generate QR"
        app:layout_constraintTop_toBottomOf="@id/button_draw_lottery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_org_event_details_back" />

    <Button
        android:id="@+id/button_org_event_details_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintTop_toBottomOf="@id/button_entrants"
        app:layout_constraintStart_toEndOf="@id/button_generate_qr"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

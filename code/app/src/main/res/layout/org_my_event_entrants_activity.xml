<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrgMyEventEntrantsActivity">

    <TextView
        android:id="@+id/textView_latest_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:padding="10dp"
        android:text="Entrants"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ListView_entrants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_latest_event"
        app:layout_constraintBottom_toTopOf="@+id/button_exportcsv"/>

    <View
        android:id="@+id/rectangle_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#D9D9D9"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/button_exportcsv"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_exportcsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export CSV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_back_my_entrants"/>

    <Button
        android:id="@+id/button_back_my_entrants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_exportcsv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button_noti_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show cancelled entrants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_list_accepted" />

    <Button
        android:id="@+id/button_list_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show accepted entrants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListView_entrants" />

</androidx.constraintlayout.widget.ConstraintLayout>